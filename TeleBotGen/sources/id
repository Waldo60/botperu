#       bot_retor+="Recuerda adquirir creditos, o Realizar una Colaboracion\n $(cat < /etc/mpayu) \n"
#       bot_retor+="Para mantener tu acceso al BotGen Recuerda Mostrar tu Token de Donacion o Compra\n"
#       bot_retor+="$LINE\n"
msj_add ${idlog}
}
done
          bot_retor="  âœ¨ ğ™±ğš’ğšğš—ğšŸğšğš—ğš’ğšğš˜  nuevamente ğšŠğš•  BOTGEN âœ¨\n"
          bot_retor+="$LINE\n"
          bot_retor+="El Administrador  $(cat < /etc/ADM-db/resell)  Te AutorizÃ³.\n"
          bot_retor+="AutorizaciÃ³n Valida Hasta : ${valid}\n"
          bot_retor+="Para GENERAR Key's usar el comando:\n/keygen\n"
          bot_retor+="Para MENU Digita el comando:\n/menu\n para actualizar el menu de comandos\n"
          bot_retor+="$LINE\n"
          bot_retor+="Recuerda adquirir creditos, o realizar una ColaboraciÃ³n:\n Billetera Movil\n"
          bot_retor+="Si tienes inconvenientes con el BOTGEN \n contactame: $(cat < /etc/ADM-db/resell) ğŸ“²\n"
          bot_retor+="Para mantener tu acceso al BOTGEN Recuerda Mostrar tu Token de Donacion o Compra.\n"
          bot_retor+="$LINE\n"
      msj_fun
      msj_add ${ids}
